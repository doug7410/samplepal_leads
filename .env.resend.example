# Resend Mail Configuration
MAIL_MAILER=resend
MAIL_FROM_ADDRESS=campaigns@yourdomain.com
MAIL_FROM_NAME="Your Company Name"

# Resend API Key
RESEND_KEY=re_your_resend_api_key_here

# Optional: Custom sender email and name for Resend
RESEND_SENDER_EMAIL=campaigns@yourdomain.com
RESEND_SENDER_NAME="Your Company Name"

# Optional: Message stream ID for categorizing emails
RESEND_MESSAGE_STREAM_ID=your_message_stream_id

# Optional: Webhook secret for validating webhook requests
RESEND_WEBHOOK_SECRET=your_webhook_signing_secret

# Webhook URL to configure in Resend dashboard:
# https://yourdomain.com/email/webhook